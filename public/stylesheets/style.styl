@import 'nib'

body
  padding: 50px
  font: 14px 'Lucida Grande', Helvetica, Arial, sans-serif
  background-color: rgba(245,245,245,1)
  // image: '../images/grey.png'

a
  color: #00B7FF

header, footer
  text-align: center
  margin: 1.6em 0

header h1
  font-size: 2.4rem

#container
  margin: 0 auto
  width: 480px

ul
  padding: 0
  list-style-type: none

#texts
  p
    font-size: 2.4rem
    text-align: center
  p, li
    border-radius: 5px
    box-shadow: 0 1px -1px 1px rgba(0, 0, 0, 0.1)
    padding: 1em;
    background: #fff

#info
  clearfix()
  li
    float: left
    width: 30.33%
    margin: 0 1.5%;
